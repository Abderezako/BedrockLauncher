<Window x:Class="Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Installer"
        mc:Ignorable="d"
        Title="Minecraft Bedrock Launcher Setup Wizard" Height="450" Width="800" WindowStyle="ThreeDBorderWindow" Foreground="White" Background="#FF212121" ResizeMode="CanMinimize" MouseDown="Window_MouseDown" Icon="icon.ico">
    <Grid Margin="0">
        <Frame x:Name="MainFrame" Margin="0,0,0,50" NavigationUIVisibility="Hidden" Source="/Installer;component/WelcomePage.xaml"></Frame>
        <Button x:Name="CancelBtn" Click="CancelBtn_Click" Content="Cancel" Margin="0,0,10,10" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
        <Button x:Name="NextBtn" Click="NextBtn_Click" Content="Next" Margin="0,0,130,10" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
        <Button x:Name="BackBtn" Click="BackBtn_Click" IsEnabled="False" Content="Back" Margin="0,0,240,10" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>
