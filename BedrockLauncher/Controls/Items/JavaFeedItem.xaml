<ListViewItem x:Class="BedrockLauncher.Controls.Items.JavaFeedItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wincontrols="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
             xmlns:local="clr-namespace:BedrockLauncher.Controls.Items"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Name="FeedItemEntry"
             mc:Ignorable="d" 
             Focusable="True"
             Padding="0"
             Selected="FeedItemEntry_Selected"
             Unselected="FeedItemEntry_Selected"
             VerticalContentAlignment="Stretch" FocusVisualStyle="{DynamicResource BlankFocusVisual}"
             Style="{DynamicResource EmptyStrechedListViewItem}"
             d:DesignHeight="400" d:DesignWidth="400" KeyUp="FeedItemEntry_KeyUp">
    <ListViewItem.Resources>
        <wincontrols:BooleanToVisibilityConverter x:Key="BoolToVis"></wincontrols:BooleanToVisibilityConverter>
    </ListViewItem.Resources>
    <ListViewItem.Content>
        <Grid Width="400">
            <Border BorderBrush="Transparent" BorderThickness="10" Background="Transparent" VerticalAlignment="Stretch" HorizontalAlignment="Center">
                <StackPanel MouseEnter="FeedItemEntry_MouseEnter" MouseLeave="FeedItemEntry_MouseLeave" MouseUp="FeedItemEntry_MouseUp" Background="{DynamicResource MCNetFeedItem.Static.Background}" x:Name="MainGrid" Focusable="False" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                    <Image Source="{Binding ImageUrl}"  Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Image>
                    <Grid Background="{Binding Background, ElementName=MainGrid}">
                        <Grid Visibility="{Binding cardBorder, Converter={StaticResource BoolToVis}}">
                            <Grid.Resources>
                                <sys:Double x:Key="BorderSizeDouble">21</sys:Double>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0" Grid.Row="0" RenderOptions.BitmapScalingMode="NearestNeighbor" Width="{DynamicResource BorderSizeDouble}" Height="{DynamicResource BorderSizeDouble}" Stretch="Uniform">
                                <Image.Source>
                                    <CroppedBitmap Source="/BedrockLauncher;component/Resources/images/ui/panels/CardBorder.png" SourceRect="0 0 7 7"></CroppedBitmap>
                                </Image.Source>
                            </Image>
                            <Image Grid.Column="0" Grid.Row="1" RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="Fill">
                                <Image.Source>
                                    <CroppedBitmap Source="/BedrockLauncher;component/Resources/images/ui/panels/CardBorder.png" SourceRect="0 7 7 46"></CroppedBitmap>
                                </Image.Source>
                            </Image>
                            <Image Grid.Column="0" Grid.Row="2" RenderOptions.BitmapScalingMode="NearestNeighbor" Width="{DynamicResource BorderSizeDouble}" Height="{DynamicResource BorderSizeDouble}" Stretch="Uniform">
                                <Image.Source>
                                    <CroppedBitmap Source="/BedrockLauncher;component/Resources/images/ui/panels/CardBorder.png" SourceRect="0 53 7 7"></CroppedBitmap>
                                </Image.Source>
                            </Image>
                            <Image Grid.Column="2" Grid.Row="1" RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="Fill">
                                <Image.Source>
                                    <CroppedBitmap Source="/BedrockLauncher;component/Resources/images/ui/panels/CardBorder.png" SourceRect="53 7 7 46"></CroppedBitmap>
                                </Image.Source>
                            </Image>
                            <Image Grid.Column="2" Grid.Row="2"  RenderOptions.BitmapScalingMode="NearestNeighbor" Width="{DynamicResource BorderSizeDouble}" Height="{DynamicResource BorderSizeDouble}" Stretch="Uniform">
                                <Image.Source>
                                    <CroppedBitmap Source="/BedrockLauncher;component/Resources/images/ui/panels/CardBorder.png" SourceRect="53 53 7 7"></CroppedBitmap>
                                </Image.Source>
                            </Image>
                            <Image Grid.Column="1" Grid.Row="0" RenderOptions.BitmapScalingMode="NearestNeighbor" Height="{DynamicResource BorderSizeDouble}" Stretch="Fill">
                                <Image.Source>
                                    <CroppedBitmap Source="/BedrockLauncher;component/Resources/images/ui/panels/CardBorder.png" SourceRect="7 0 46 7"></CroppedBitmap>
                                </Image.Source>
                            </Image>
                            <Image Grid.Column="2" Grid.Row="0"  RenderOptions.BitmapScalingMode="NearestNeighbor" Width="{DynamicResource BorderSizeDouble}" Height="{DynamicResource BorderSizeDouble}" Stretch="Uniform">
                                <Image.Source>
                                    <CroppedBitmap Source="/BedrockLauncher;component/Resources/images/ui/panels/CardBorder.png" SourceRect="53 0 7 7"></CroppedBitmap>
                                </Image.Source>
                            </Image>
                            <Image Grid.Column="1" Grid.Row="2" RenderOptions.BitmapScalingMode="NearestNeighbor" Height="{DynamicResource BorderSizeDouble}" Stretch="Fill">
                                <Image.Source>
                                    <CroppedBitmap Source="/BedrockLauncher;component/Resources/images/ui/panels/CardBorder.png" SourceRect="7 53 46 7"></CroppedBitmap>
                                </Image.Source>
                            </Image>
                        </Grid>
                        <StackPanel Margin="28" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Grid.RowSpan="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <TextBlock VerticalAlignment="Center" FontFamily="/BedrockLauncher;component/Resources/fonts/#Minecraft Ten" FontWeight="Normal" FontSize="20" Padding="0,0" TextWrapping="Wrap" Text="{Binding Title}" Foreground="White"></TextBlock>
                            <DockPanel VerticalAlignment="Bottom" x:Name="Tb" Margin="0,15,0,0">
                                <TextBlock Padding="4,2" HorizontalAlignment="Left" TextAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="{Binding Tag}" Foreground="White" Background="#333333"></TextBlock>
                                <TextBlock TextAlignment="Right" VerticalAlignment="Center" TextWrapping="Wrap" Text="{Binding Date}" Foreground="#CCCCCC"></TextBlock>
                            </DockPanel>
                        </StackPanel>
                    </Grid>

                    

                    <StackPanel.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.3"></DropShadowEffect>
                    </StackPanel.Effect>
                </StackPanel>
            </Border>
        </Grid>

    </ListViewItem.Content>
</ListViewItem>
