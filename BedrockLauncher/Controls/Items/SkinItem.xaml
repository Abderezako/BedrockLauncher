<UserControl x:Class="BedrockLauncher.Controls.Items.SkinItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BedrockLauncher.Controls.Items"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ContentControl Focusable="False" x:Name="control" Content="{Binding}" ContentTemplate="{StaticResource templateSkinPreview}">
        <ContentControl.ContextMenu>
            <ContextMenu x:Name="SkinContextMenu" Style="{DynamicResource NoCheckboxContextMenu}">
                <MenuItem Header="{DynamicResource GeneralText_Edit}" Name="EditSkinButton" Click="EditSkinButton_Click"></MenuItem>
                <MenuItem Header="{DynamicResource GeneralText_Delete}" Name="DeleteSkinButton" Click="DeleteSkinButton_Click"></MenuItem>
            </ContextMenu>
        </ContentControl.ContextMenu>
    </ContentControl>
</UserControl>
