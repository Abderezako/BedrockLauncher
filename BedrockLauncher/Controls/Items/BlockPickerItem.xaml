<Grid x:Class="BedrockLauncher.Controls.Items.BlockPickerItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BedrockLauncher.Controls"
             mc:Ignorable="d" 
             Height="65" Width="60" 
             GotFocus="MainButton_GotFocus"
             LostFocus="MainButton_LostFocus"
             MouseEnter="MainButton_MouseEnter"
             MouseLeave="MainButton_MouseLeave">
    <Button Style="{DynamicResource PanelButton}"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            x:Name="MainButton"
            Padding="5"
            MouseEnter="MainButton_MouseEnter"
            MouseLeave="MainButton_MouseLeave"></Button>
    <Button Style="{DynamicResource CloseButton}" 
            Name="CrossButton" 
            Visibility="Collapsed" 
            Width="15" 
            Height="15" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Right"
            MouseEnter="MainButton_MouseEnter"
            MouseLeave="MainButton_MouseLeave"></Button>
</Grid>
