<Application
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BedrockLauncher"
             xmlns:bl="clr-namespace:BL_Core.Language;assembly=BL_Core"
             x:Class="BedrockLauncher.App"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <bl:LanguageDictionary Source="/BL_Core;component/Resources/lang/lang.en-US.xaml"></bl:LanguageDictionary>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/values/base_values.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/icons.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/misc.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/contextmenu.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/button.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/checkbox.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/combobox.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/menuitems.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/listview.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/textbox.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/textblock.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/frame.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/scrollbars.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/tabbar.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/expander.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/richtextbox.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/radiobutton.xaml"/>
                <ResourceDictionary Source="Resources/styles/item_templates.xaml"/>
                <ResourceDictionary Source="/BL_Core;component/Resources/styles/focus_visuals.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
