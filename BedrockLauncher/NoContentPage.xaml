<Page x:Class="BedrockLauncher.NoContentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BedrockLauncher"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NoContentPage" Foreground="{x:Null}" Background="#FF323232">
    <Grid>
        <ComboBox x:Name="VersionList" ScrollViewer.VerticalScrollBarVisibility="Disabled" d:DataContext="{d:DesignData /SampleData/Versions.xaml}" ItemsSource="{Binding}" HorizontalContentAlignment="Stretch" Margin="146.659,41.589,217.437,368.053" Visibility="Visible">
            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding DisplayName}" FontWeight="Bold" Foreground="White" />
            <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding DisplayInstallStatus}" Foreground="White" />
        </ComboBox>
    </Grid>
</Page>
